<html>
  <body>
  	<header>
  	  <%= render 'books/header', book: @book %>
  	</header>
  	<div class="container main-contents">
  	  <h2>User info</h2>
      <%= form_for(@user) do |f| %>
        <div class="form-group has-icon">
          <label class="control-label sr-only" for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true,class:"form-control",id:"inputName",placeholder:"Name" %>
        </div>
        <div class="form-group has-icon">
          <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </div>
        <div class="form-group has-icon">
          <label class="control-label sr-only" for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction,autofocus: true, class:"form-control", id:"inputIntroduction", placeholder: "Introduction" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-lg btn-default" %>
      <% end %>
  	</div>
  	<footer>
  	  <%= render 'books/footer' %>
  	</footer>
  </body>
</html>
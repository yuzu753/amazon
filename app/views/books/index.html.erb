<html>
 <body>
  <header>
   <%= render 'books/header', book: @book %>
  </header>
  <div class="container main-contents">
   <div class="row">
     <div class="row">
     <% if flash[:notice] %>
  　 <div class="flash">
  　 <%= flash[:notice] %>
   　</div>
   　<% end %>
  	<%= render 'books/sidebar', book: @book %>
  <div class="col-xs-9">
   <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
      	<tr>
      	  <th></th>
      	  <th>Title</th>
      	  <th>Opinon</th>
      	  <th colspan="3"></th>
      	</tr>
      </thead>
  	  <tbody>
  	    <% @books.each do |book| %>
  	     <tr>
  	      <td>
            <%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
          </td>
  	   	  <td class="title"><%= link_to book.title, book_path(book.id) %></td>
          <td class="opinion"><%= book.body %></td>
  	     </tr>
  	    <% end %>
  	  </tbody>
    </table>
   </div>
  </div>
 </div>
  <footer>
    <%= render 'books/footer' %>
  </footer>
 </body>
</html>

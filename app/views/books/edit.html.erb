<html>
  <body>
  	<header>
  	  <%= render 'books/header', book:@book %>
  	</header>
  	<div class="container main-contents">
     <% if flash[:notice] %>
  　 <div class="flash">
  　 <%= flash[:notice] %>
   　</div>
   　<% end %>
  	  <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2>New book</h2>
        <%= form_for(@book) do |f| %>
        <div class="row">
          <div class="col-sm-12">
            <h6>Title</h6>
            <label class="control-label sr-only">Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
        </div>
        <div class= "row">
          <div class= "col-sm-12">
            <h6>Opinion</h6>
            <label class ="control-label sr-only">Opinion</label>
            <%= f.text_field :body, class:"form-control" %>
          </div>
          </div>
           <%= f.submit "Update Book", class:"col-xs-12 btn btn-primary" %>
            <% end %>
            <%= link_to "show",book_path(@book) %>
            |
            <%= link_to "Back",books_path %>

        </div>
  	  </div>
  	</div>
  	<footer>
  	  <%= render 'books/footer' %>
  	</footer>
  </body>
</html>